<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="portal_layout_bdl" inherit_id="portal.portal_layout">   
    <xpath expr="//a[@href='/my/account']" position="attributes">
      <attribute name="groups">bdl_portal.group_portal_admin,base.group_user</attribute>
    </xpath>
  </template>

   <template id="portal_my_details_bdl" inherit_id="portal.portal_my_details">
    <xpath expr="//form" position="attributes">
      <attribute name="t-if">not access_denied</attribute>
    </xpath>
     <xpath expr="//form" position="after">
      <h3 t-if="access_denied" t-esc="access_denied"/>
    </xpath>
   </template>
</odoo>
