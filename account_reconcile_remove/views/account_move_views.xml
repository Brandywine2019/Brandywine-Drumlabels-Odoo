<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_move_line_tree_grouped_reconcile_remove" model="ir.ui.view">
        <field name="name">view.move.line.tree.inherit.reconcile.remove</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree_grouped"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="hide_reconcile" invisible="1"/>
            </xpath>
        </field>
    </record>
     <record id="view_move_line_tree_reconcile_remove_items" model="ir.ui.view">
            <field name="name">view.move.line.tree.reconcile.remove.items</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree[1]" position="inside">
                    <field name="hide_reconcile" invisible="1"/>
                </xpath>
            </field>
    </record>
</odoo>